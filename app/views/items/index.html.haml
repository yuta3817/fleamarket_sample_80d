.Top__PickupCategory
  .Top__PickupCategory__contents
    .Top__PickupCategory__contents__title
      ピックアップカテゴリー
    .Top__PickupCategory__contents__subtitle
      新規投稿商品
    .Top__PickupCategory__contents__boxes
      - @products.each do |product|
        = link_to "/items/#{product.id}", class: "Top__PickupCategory__contents__boxes__link" do
          .Top__PickupCategory__contents__boxes__block
            - if product.product_purchase.present?
              .Top__PickupCategory__contents__boxes__block__sold-out sold out
            .Top__PickupCategory__contents__boxes__block__imgblock
              = image_tag product.product_images[0].image.url, class: "Top__PickupCategory__contents__boxes__block__imgblock__img"
          .Top__PickupCategory__contents__boxes__block__name
            = product.name
            .Top__PickupCategory__contents__boxes__block__text
              .Top__PickupCategory__contents__boxes__block__text__price
                = "#{product.price}円"
                .Top__PickupCategory__contents__boxes__block__text__price__tax
                  (税込)
              .Top__PickupCategory__contents__boxes__block__text__like
                %p ★4
