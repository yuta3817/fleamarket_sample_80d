.Header
  .Header__center
    .Header__inner
      = link_to "/" do
        = image_tag asset_path("logo.png"), class: "Header__inner__logo"
      .Header__inner__searchbox
        = form_with url: "#" do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "Header__inner__searchbox__form"
          %button{ type:"submit", class:"Header__inner__searchbox__button" }
            = image_tag asset_path("icon-search 1"), class:"Header__inner__searchbox__button-image"
    .Header__nav
      %ul.Header__nav__left
        %li.Header__nav__left__list
          = link_to "#", class:"Header__black Header__hover" do
            カテゴリー
        %li.Header__nav__left__list
          = link_to "#", class:"Header__black Header__hover" do
            ブランド
      %ul.Header__nav__right
        - if user_signed_in?    
          %li.Header__nav__right__list
            = link_to "/items/mypage/#{current_user.id}", class:"Header__black" do
              マイページ 
          %li.Header__nav__right__list
            = link_to "/users/sign_out", method: :delete, class:"Header__black" do
              ログアウト
        - else
          %li.Header__nav__right__list
            = link_to "/users/sign_in", class:"Header__black" do
              ログイン
          %li.Header__nav__right__list
            = link_to "/users/sign_up", class:"Header__black" do
              新規会員登録
